{% extends "base.html.twig" %}
{% block body %}
<h2 class="display-4 text-center mb-3">Products List</h2>
<table class="table table-striped text-center">
<thead>
        <tr>

                <th>Name</th>
                <th>Image</th>
                <th>Price</th>
                <th>Quantity</th>
                {% if is_granted('ROLE_ADMIN') %}
                <th></th>
                {% endif %}	
        </tr>
</thead>

<tbody>
{% for  product in products %}
    <tr>
        <td>{{product.name}}</td>
        <td><img src="{{asset('image/'~product.img)}}" alt="" width="120" height="100"></td>
        <td>{{product.price}}</td>
        <td>{{product.quantity}}</td>
         

        <td>
        <a href="{{path('detail',{'id':product.id})}}" class="btn btn-primary">Details</a>    
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{path('edit',{'id':product.id})}}" class="btn btn-primary">Edit</a>
        <a href="{{path('delete',{'id':product.id})}}" class="btn btn-warning"
        onclick="return confirm('Are you sure to delete!')">Delete</a>
        {% endif %}
        </td>
    </tr>
{% endfor %}
</tbody>

</table>
{% endblock %}